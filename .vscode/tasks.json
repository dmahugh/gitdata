{
    "version": "0.1.0",
    "command": "taskrunner.bat"
    "tasks" : [
        {
			// build task - Ctrl-B
            "taskName": "python",
		 	"isShellCommand": true,
			"isBuildCommand": true,
            "args": ["${file}"],
        },
        {
			// test task - Ctrl-T
            "taskName": "py.test",
		 	"isShellCommand": true,
			"isTestCommand": true,
            "args": ["-v"],
        }
    ]
}
